<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/my_gradient2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:fontFamily="@font/artifika"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="31sp" />

    <EditText
        android:id="@+id/user_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="100sp"
        android:backgroundTint="@color/dark_blue"
        android:ems="10"
        android:fontFamily="@font/candal"
        android:hint="@string/hint"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#80DDDD"
        android:textColorHint="@color/dark_blue"
        android:textSize="25sp" />

    <Button
        android:id="@+id/main_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_field"
        android:layout_marginHorizontal="90sp"
        android:layout_marginTop="30sp"
        android:backgroundTint="#A347DC"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/main_btn"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/result_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_btn"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="center"
        android:textColor="@color/light_blue2"
        android:textSize="24sp" />

    <android.widget.Button
        android:id="@+id/exit_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="50sp"
        android:layout_marginBottom="50sp"
        android:background="@drawable/btn_off"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_info"
        android:layout_centerHorizontal="true"
        android:visibility="visible"/>

</RelativeLayout>